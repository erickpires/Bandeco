<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settings_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        app:theme="@style/AppThemeToolbar"
        app:popupTheme="@style/Theme.AppCompat.Light"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/show_meals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/default_top_padding"
                android:paddingTop="@dimen/default_top_padding">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_side_padding"
                    android:paddingStart="@dimen/default_side_padding"
                    android:paddingRight="@dimen/default_side_padding"
                    android:paddingEnd="@dimen/default_side_padding"
                    android:text="@string/show"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/meal_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_side_padding_identented"
                    android:paddingStart="@dimen/default_side_padding_identented"
                    android:paddingRight="@dimen/default_side_padding_identented"
                    android:paddingEnd="@dimen/default_side_padding_identented"
                    android:text="" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/negative_words"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/default_top_padding"
                android:paddingTop="@dimen/default_top_padding">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_side_padding"
                    android:paddingStart="@dimen/default_side_padding"
                    android:paddingRight="@dimen/default_side_padding"
                    android:paddingEnd="@dimen/default_side_padding"
                    android:text="@string/negative_words"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/negative_words_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/default_side_padding_identented"
                    android:paddingStart="@dimen/default_side_padding_identented"
                    android:paddingRight="@dimen/default_side_padding_identented"
                    android:paddingEnd="@dimen/default_side_padding_identented" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/positive_words"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/default_top_padding"
                android:paddingTop="@dimen/default_top_padding">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_side_padding"
                    android:paddingStart="@dimen/default_side_padding"
                    android:paddingRight="@dimen/default_side_padding"
                    android:paddingEnd="@dimen/default_side_padding"
                    android:text="@string/positive_words"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/positive_words_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/default_side_padding_identented"
                    android:paddingStart="@dimen/default_side_padding_identented"
                    android:paddingRight="@dimen/default_side_padding_identented"
                    android:paddingEnd="@dimen/default_side_padding_identented" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/notify_when_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/default_top_padding"
                android:paddingTop="@dimen/default_top_padding">

                <TextView
                    android:id="@+id/notify_when_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_side_padding"
                    android:paddingStart="@dimen/default_side_padding"
                    android:paddingRight="@dimen/default_side_padding"
                    android:paddingEnd="@dimen/default_side_padding"
                    android:text="@string/notify"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/notify_when_option_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_side_padding_identented"
                    android:paddingStart="@dimen/default_side_padding_identented"
                    android:paddingRight="@dimen/default_side_padding_identented"
                    android:paddingEnd="@dimen/default_side_padding_identented" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/lunch_notification_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/default_top_padding"
                android:paddingTop="@dimen/default_top_padding">

                <TextView
                    android:id="@+id/lunch_notification_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_side_padding"
                    android:paddingStart="@dimen/default_side_padding"
                    android:paddingRight="@dimen/default_side_padding"
                    android:paddingEnd="@dimen/default_side_padding"
                    android:text="@string/lunch_notification"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/lunch_notification_time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_side_padding_identented"
                    android:paddingStart="@dimen/default_side_padding_identented"
                    android:paddingRight="@dimen/default_side_padding_identented"
                    android:paddingEnd="@dimen/default_side_padding_identented"
                    android:text="" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/divider"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/dinner_notification_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/default_top_padding"
                android:paddingTop="@dimen/default_top_padding">

                <TextView
                    android:id="@+id/dinner_notification_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_side_padding"
                    android:paddingStart="@dimen/default_side_padding"
                    android:paddingRight="@dimen/default_side_padding"
                    android:paddingEnd="@dimen/default_side_padding"
                    android:text="@string/dinner_notification"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/dinner_notification_time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/default_side_padding_identented"
                    android:paddingStart="@dimen/default_side_padding_identented"
                    android:paddingRight="@dimen/default_side_padding_identented"
                    android:paddingEnd="@dimen/default_side_padding_identented"
                    android:text="" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout><!-- From: file:/home/erick/AndroidStudioWorkspace/Bandeco/bandeco/src/main/res/layout/activity_settings.xml -->