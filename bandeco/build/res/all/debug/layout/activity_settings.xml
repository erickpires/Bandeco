
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/show_meals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_top_padding"
        android:paddingTop="@dimen/default_top_padding" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding"
            android:text="@string/show"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/meal_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding_identented"
            android:text="" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/negative_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_top_padding"
        android:paddingTop="@dimen/default_top_padding" >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding"
            android:text="@string/negative_words"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/negative_words_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding_identented"
            android:maxLines="1"
            android:textColor="@color/gray_text"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/positive_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_top_padding"
        android:paddingTop="@dimen/default_top_padding" >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding"
            android:text="@string/positive_words"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/positive_words_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding_identented"
            android:maxLines="1"
            android:textColor="@color/gray_text"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        tools:ignore="ContentDescription" />

        <RelativeLayout
            android:id="@+id/receive_notifications"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/default_top_padding"
                android:paddingLeft="@dimen/default_side_padding"
                android:paddingTop="@dimen/default_top_padding"
                android:text="@string/receive_notifications"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            <CheckBox
                android:id="@+id/receive_notifications_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/default_top_padding"
                android:paddingRight="@dimen/default_side_padding"
                android:paddingTop="@dimen/default_top_padding" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider"
            tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/lunch_notification_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_top_padding"
        android:paddingTop="@dimen/default_top_padding" >
        <TextView
            android:id="@+id/lunch_notification_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding"
            android:text="@string/lunch_notification"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/lunch_notification_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding_identented"
            android:text="" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/dinner_notification_time_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_top_padding"
        android:paddingTop="@dimen/default_top_padding" >
        <TextView
            android:id="@+id/dinner_notification_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding"
            android:text="@string/dinner_notification"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/dinner_notification_time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding_identented"
            android:text="" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/notify_when_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_top_padding"
        android:paddingTop="@dimen/default_top_padding" >
        <TextView
            android:id="@+id/notify_when_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding"
            android:text="@string/notify"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/notify_when_option_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_side_padding_identented" />
    </LinearLayout>

</LinearLayout>
</ScrollView><!-- From: file:/home/erick/AndroidStudioWorkspace/Bandeco/bandeco/src/main/res/layout/activity_settings.xml -->